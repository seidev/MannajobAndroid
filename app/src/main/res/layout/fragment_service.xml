<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    tools:context=".serivce.Service">
    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/service_switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="4dp"
        app:selectedColor="@color/MYOrange"
        app:selectedTab="0"
        app:strokeRadius="15dp"
        app:strokeWidth="1dp"
        app:switchTabs="@array/switch_service"
        app:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_service_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search_32"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="글 제목을 입력하세요"
            android:inputType="textPersonName" />
        <Button
            android:id="@+id/search_service_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/select_button"
            android:text="검색" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_recyc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />
</LinearLayout>