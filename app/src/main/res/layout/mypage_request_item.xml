<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="#ffffffff"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/textlines2"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/b_num_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:hint="0001" />

                <TextView
                    android:id="@+id/b_subject_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="00기업 현직자 멘토링 구합니다"
                    android:paddingLeft="10dp" />
                <Button
                    android:id="@+id/request_cancel_btn"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/select_button"
                    android:text="취소" />
                <Button
                    android:id="@+id/request_review_btn"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/select_button"
                    android:visibility="gone"
                    android:text="리뷰" />
                <TextView
                    android:id="@+id/mat_state_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="접수중"
                    android:textColor="@color/MYOrange"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>