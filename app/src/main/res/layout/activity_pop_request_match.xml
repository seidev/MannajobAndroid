<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".match.PopRequestMatch">
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popheader"
            android:gravity="center|center_horizontal"
            android:text="매칭 신청"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="희망일자" />

<!--            <TextView
                android:id="@+id/mat_stdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="5dp"
                android:background="@drawable/editbox_gray"
                android:inputType="date" />-->

            <Spinner
                android:id="@+id/mat_stdate_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/year" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <Spinner
                android:id="@+id/mat_stdate_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/month" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <Spinner
                android:id="@+id/mat_stdate_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/day" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="시작시간" />

       <!--     <TextView
                android:id="@+id/mat_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:ems="5"
                android:background="@drawable/editbox_gray"
                android:inputType="time" />-->

            <Spinner
                android:id="@+id/mat_stdate_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/hour" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/popfooter">

            <Button
                android:id="@+id/mat_request"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/select_button_orange"
                android:text="요청" />

            <Button
                android:id="@+id/mat_cancel"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/select_button"
                android:text="취소" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>